{
    "name": "p-er/DesignPatternsPHPt",
    "type": "library",
    "description": "DesignPatternsPHP education",
    "keywords": [
        "p-er",
        "DesignPatternsPHPt"
    ],
    "homepage": "https://github.com/p-er/DesignPatternsPHPt",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexey Perov",
            "email": "p-er@yandex.ru",
            "homepage": "https://github.com/p-er",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "^6.0"
    },
    "autoload": {
        "psr-4": {
            "p-er\\DesignPatternsPHPt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "p-er\\DesignPatternsPHPt\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
